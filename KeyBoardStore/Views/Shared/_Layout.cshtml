<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .container {
            color:black;
        }
        .footer{
            display:block;
        }
        footer {
            display: block;
            text-align: center;
            color: blue;
            margin-inline:0px;
        }
    </style>
</head>

<body>
    <div class="navbar-inverse navbar-fixed-top ">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DEV", "Index", "BanPhim", new { area = "" }, new { @class = "navbar-brand" }) 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Đăng Ký", "DangKy", "NguoiDung")</li>*@

                    @*<li>@Html.Partial("~/Views/GioHang/GioHangPartial.cshtml")</li>*@
                    <li>@Html.ActionLink("Chi tiết", "Index", "TheLoai")</li>
                    <li>@Html.ActionLink("Đăng Xuất", "DangNhap", "NguoiDung")</li>
                    @*<li>@Html.ActionLink("DEV SITE", "Index", "BanPhim")</li>*@
                </ul>
            </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 1994 - Công Ty Trách Nhiệm hữu hạn Bàn Phím Xanh</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("upload", required: false)
</body>
</html>
